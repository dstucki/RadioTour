<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:stretchColumns="3" >

    <TableRow >

        <TextView
            android:id="@+id/rang"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="right"
            android:text="@string/tb_position"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/startnummer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="right"
            android:text="@string/tb_startnr"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fahrername"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="@string/tb_name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/team"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:gravity="left"
            android:text="@string/tb_team"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/llayout_land"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/land_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/rider_country"
                android:gravity="left"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/land_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/land"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:contentDescription="@string/rider_country"
            android:gravity="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/virtualRank"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:gravity="left"
            android:text="@string/tb_rang"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pointBoni"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="8"
            android:gravity="left"
            android:text="@string/tb_pointsbonus"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/virtualDeficit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="9"
            android:gravity="left"
            android:text="@string/tb_virtdeficite"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/timeOfficial"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_column="10"
            android:gravity="left"
            android:text="@string/tb_officialtime"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/handicapOfficial"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_column="11"
            android:gravity="left"
            android:text="@string/tb_officialdeficte"
            android:textSize="20dp" />
    </TableRow>

</TableLayout>