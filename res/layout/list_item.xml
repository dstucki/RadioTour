<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/getStartNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:text="@string/tb_startnr"
        android:textSize="20dp" >
    </TextView>
    <TextView
        android:id="@+id/getCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:text="@string/driver_country"
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:id="@+id/getTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:text="@string/driver_team"
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:id="@+id/getName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:text="@string/driver_name"
        android:textSize="20dp" >
    </TextView>

    <TextView
        android:id="@+id/getBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:text="@string/driver_birthday"
        android:textSize="20dp" >
    </TextView>

</LinearLayout>