<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:stretchColumns="3,4" >

    <TableRow >

        <TextView
            android:id="@+id/rang"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="right"
            android:text="Position"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/startnummer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="right"
            android:text="Start-Nr."
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fahrername"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_marginLeft="5dp"
            android:gravity="left"
            android:text="Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/team"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:gravity="left"
            android:text="Team"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/llayout_land"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/land_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/land_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textSize="20dp" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/virtualRank"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="7"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:text="Rang"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/virtualDeficit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="8"
            android:gravity="left"
            android:text="Virt. RÃ¼ckstand"
            android:textSize="20dp" />
    </TableRow>

</TableLayout>